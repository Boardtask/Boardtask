DATABASE_URL=sqlite:boardtask.db

# Base URL for emails (verification links). Default: http://localhost:3000
APP_URL=http://localhost:3000

# Email
# MAIL_ADAPTER=console (default) or smtp
# MAIL_FROM=from/reply address for outgoing emails (required; unset uses please-configure@example.com)
MAIL_FROM=noreply@yourdomain.com

# SMTP (only when MAIL_ADAPTER=smtp)
# SMTP_HOST=
# SMTP_PORT=587
# SMTP_USER=
# SMTP_PASS=